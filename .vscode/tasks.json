{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile",
      "type": "shell",
      "command": "javac",
      "args": [
        "-cp",
        "javafx-sdk-21.0.1/lib/*",
        "-d",
        "out",
        "src/model/*.java",
        "src/controller/*.java",
        "src/Main.java"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "run",
      "type": "shell",
      "command": "java",
      "args": [
        "-cp",
        "out:javafx-sdk-21.0.1/lib/*",
        "Main"
      ],
      "group": "test",
      "dependsOn": "compile"
    }
  ]
}